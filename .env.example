# PostgreSQL Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=dblp_semantic
DB_USER=postgres
DB_PASSWORD=your_password

# DBLP Processing Configuration
DBLP_URL=https://dblp.org/xml/dblp.xml.gz
DOWNLOAD_DIR=external
BATCH_SIZE=10000
LOG_LEVEL=INFO

# Target Venues Configuration
TARGET_VENUES=acl,naacl,emnlp,findings
ENABLE_VENUE_FILTER=true

# File Paths
COMPRESSED_FILE=external/dblp.xml.gz
XML_FILE=external/dblp.xml

# Scheduling Configuration
SCHEDULE_CRON=0 2 * * 1
MAX_RETRIES=3
RETRY_DELAY=300

# Incremental Processing
ENABLE_INCREMENTAL=true
INCREMENTAL_CHECK_DAYS=7

# Semantic Scholar API Configuration
SEMANTIC_SCHOLAR_API_KEY=your_s2_api_key_here